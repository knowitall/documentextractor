# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /logs                       controllers.Application.logs
GET     /logentry/:i                controllers.Application.logentry(i: Long)
POST    /file                       controllers.Application.submitFile
POST    /text                       controllers.Application.submitText
POST    /url                        controllers.Application.submitUrl

POST    /summarize                  controllers.Application.summarize

GET     /annotate                   controllers.Application.annotate(logentryId: Long, annotation: Boolean, sentence: String, arg1: String, rel: String, arg2: String)
GET     /unannotate                 controllers.Application.unannotate(logentryId: Long, annotation: Boolean, sentence: String, arg1: String, rel: String, arg2: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
